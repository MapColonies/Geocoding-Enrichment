{
  "openapiConfig": {
    "filePath": "./openapi3.yaml",
    "basePath": "/docs",
    "rawPath": "/api",
    "uiPath": "/api"
  },
  "telemetry": {
    "logger": {
      "level": "info",
      "prettyPrint": false
    }
  },
  "server": {
    "port": "8080",
    "request": {
      "payload": {
        "limit": "1mb"
      }
    },
    "response": {
      "compression": {
        "enabled": true,
        "options": null
      }
    }
  },
  "kafka": {
    "brokers": "kafka:9092"
  },
  "kafkaConsumer": {
    "groupId": "123"
  },
  "kafkaTopics": {
    "input": "topic"
  },
  "elastic": {
    "node": "http://elasticsearch:9200",
    "auth": {
      "username": "elastic",
      "password": "changeme"
    },
    "requestTimeout": 60000,
    "properties": {
      "index": "enrich_index"
    }
  },
  "application": {
    "userDataService": {
      "endpoint": "http://user-data-service:8080",
      "queryParams": {
        "extraDetails": true
      }
    }
  }
}
